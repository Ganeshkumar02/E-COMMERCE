<%- include('./partials/header') %>
<% user.cart.forEach(function(item){ %>
    <div class="w-full min-h-screen flex flex-col md:flex-row items-start px-5 md:px-20 py-10 gap-10">
        
        <!-- Product Image and Details -->
        <div class="w-full md:w-[30%] rounded-md overflow-hidden">
            <div class="w-full flex justify-center items-center bg-[<%= item.bgcolor %>]">
                <img class="h-[18rem] object-contain" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
            </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
                <h3 class="text-2xl"><%= item.name || 'Product Name' %></h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between text-white px-5 py-3 bg-[<%= item.textcolor %>]">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">₹ <%= (Number(item.price) - Number(item.discount) + 20) %></h2>
            </div>
        </div>

        <!-- Price Breakdown -->
        <div class="w-full md:w-[70%]">
            <h3 class="text-xl mb-5">Price Breakdown</h3>
            <div class="px-5 md:px-10">
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= item.price %></h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= Number(item.discount) %></h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex justify-between mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
            </div>
        </div>
        
    </div>
<% }) %>
<%- include('./partials/footer') %>
